@import 'mixins/fonts'
@import 'prepare/reset'
@import 'fonts/web_serveroff'

*
  box-sizing border-box

body
  font-family 'WebServeroff'
  background-color rgba(231, 231, 231, 0.33)

.wrapper
  width 500px
  margin 0 auto

ul
  list-style none

li
  margin 10px 0
  background-color white
  border-radius 5px
  padding 10px
  box-shadow 0 5px 5px -5px #999

a
  color black
  font-weight bold
  text-decoration none

clearfix()
  zoom 1
  &:after
  &:before
    content ""
    display table
  &:after
    clear both

@import 'blocks/news-item'
@import 'blocks/header'
