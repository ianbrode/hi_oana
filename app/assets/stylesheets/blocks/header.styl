.header
  text-align left
  margin 10px 0
  &__logo
    font-size 24px
    display inline-block
    vertical-align middle
    padding 5px
  &__search
    width 240px
    padding 5px
    border solid 1px #fff
    box-shadow inset 1px 1px 2px 0 #707070
    transition box-shadow 0.3s
  &__sort
    font-family inherit
    font-size 13px
    padding 5px 15px
    color rgba(0,0,0,.8)
    border 0 rgba(0,0,0,0)
    background-color #E6E6E6
    text-decoration none
    border-radius 2px
